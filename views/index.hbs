<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Books</title>
</head>
<body>
    <h1>List of Books</h1>
    {{#if successMessage}}
      <p style="color: green;">{{ successMessage }}</p>
    {{/if}}
    <ul>
        {{#each book}}
        <li>
            <a href="/books/{{this._id}}">{{this.title}}</a> by {{this.author}} <br>
            Price: {{this.price}} | Pages: {{this.pages}} | Avg Reviews: {{this.avg_reviews}} | Number of Reviews: {{this.n_reviews}} | Star: {{this.star}} <br>
            Dimensions: {{this.dimensions}} | Weight: {{this.weight}} | Language: {{this.language}} | Publisher: {{this.publisher}} <br>
            Complete Link: <a href="{{this.complete_link}}">{{this.complete_link}}</a>
        </li>
        {{/each}}
    </ul>
</body>
</html>
